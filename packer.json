{
  "builders": [{
    "type": "azure-arm",

    "client_id": "",
    "client_secret": "",
    "tenant_id": "",
    "subscription_id": "",

    "managed_image_resource_group_name": "Experiments",
    "managed_image_name": "SystemandPortalTests-{{isotime | clean_resource_name}}",
    
    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "18.04-LTS",

    "azure_tags": {
        "dept": "Engineering",
        "task": "Image deployment"
    },

    "vm_size": "Standard_NC6s_v3",
    "location": "Canada Central"
  }],

  "provisioners": [
    {
      "type": "ansible",
      "host_alias": "gensynth",
      "playbook_file": "azure.yml"
      
    },       
    {
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
    "inline": [
      "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
    }
  ]
}

